<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hkings.todorecetas.recetas">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/btncenas"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="170dp"
        android:layout_height="184dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hhhh"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnpostres"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.421"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageButton
        android:id="@+id/btnalmuerzo"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="166dp"
        android:layout_height="190dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/menu_detail_lunch_02_"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="26dp"
        android:layout_marginRight="18dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="200dp" />

    <ImageButton
        android:id="@+id/btnpostres"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="163dp"
        android:layout_height="183dp"
        android:layout_marginBottom="6dp"
        android:layout_marginRight="16dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/wewew"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/btndesayuno"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="167dp"
        android:layout_height="188dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btnalmuerzo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/rrrr" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="46dp"
        android:layout_marginTop="18dp"
        android:fontFamily="casual"
        android:text="ALMUERZOS"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnalmuerzo" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="casual"
        android:text="CENAS"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="61dp"
        android:fontFamily="casual"
        android:text="POSTRES"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:fontFamily="casual"
        android:text="DESAYUNOS"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btndesayuno"
        app:layout_constraintRight_toLeftOf="@+id/textView"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.013" />

</android.support.constraint.ConstraintLayout>
